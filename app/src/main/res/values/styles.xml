<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainStyle" parent="Theme.AppCompat">
    </style>

    <style name="mainStyle.noActionBarCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorControlHighlight">#FF0E90</item>
    </style>

    <style name="mainStyle.postActionBar" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/backgroundPostActionBar</item>
        <item name="android:actionMenuTextColor">#C8C8C8</item>
        <item name="actionMenuTextColor">@drawable/black_gray</item>
        <item name="drawerArrowStyle">@style/drawTogglePost</item>
    </style>

    <style name="backgroundPostActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/background_custom</item>
        <item name="titleTextStyle">@style/titlePostActionBar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="titlePostActionBar" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="drawTogglePost" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="spinBars">true</item>
        <item name="android:color">#000000</item>
    </style>
</resources>
